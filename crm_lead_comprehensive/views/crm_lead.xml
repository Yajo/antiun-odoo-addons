<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="crm_lead_form_view">
        <field name="name">Add comprehensive fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@string='Extra Info']">
                    <group string="Company information">
                        <group>
                            <field name="partner_trade_name"/>
                            <field name="partner_vat"/>
                            <field name="partner_phone"/>
                            <field name="partner_mobile"/>
                            <field name="partner_website"/>
                            <field name="partner_online_shop"/>
                        </group>
                        <group>
                            <field name="invoice_equal"/>
                            <div attrs="{'invisible': [('invoice_equal', '=', True)]}">
                                <label for="street" string="Address"/>
                                <div>
                                    <field name="invoice_street"
                                           placeholder="Street..."/>
                                    <field name="invoice_street2"/>
                                    <div class="invoice_address_format">
                                        <field name="invoice_city"
                                               placeholder="City"
                                               style="width: 40%%"/>
                                        <field name="invoice_state_id"
                                               options='{"no_open": True}'
                                               placeholder="State"
                                               style="width: 24%%"/>
                                        <field name="invoice_zip"
                                               placeholder="ZIP"
                                               style="width: 34%%"/>
                                    </div>
                                    <field name="invoice_country_id"
                                           placeholder="Country"
                                           options='{"no_open": True,
                                                     "no_create": True}'/>
                                </div>
                            </div>
                        </group>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

</data>
</openerp>
